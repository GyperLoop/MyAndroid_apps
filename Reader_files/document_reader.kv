#:kivy 2.1.0

<RootWidget@BoxLayout>:
    orientation: "vertical"
    padding: "10dp"
    spacing: "10dp"

    # Top section: file selection
    BoxLayout:
        size_hint_y: None
        height: "48dp"
        spacing: "10dp"

        Button:
            text: "Open File"
            on_release: app.open_file_chooser()
            background_normal: "" #Defolt background
            background_color: 0.1, 0.5, 0.5, 1  # deeper blue
            color: 1, 1, 1, 1 # White text

        Button:
            text: "Select File"
            on_release: app.open_file_chooser()
            background_normal: "" #Defolt background
            background_color: 0.1, 0.5, 0.9, 1  # deeper blue
            color: 1, 1, 1, 1 # White text

        Button:
            text: "Exit"
            on_release: app.clear_output()
            background_normal: "" #Defolt background
            background_color: 0.9, 0.3, 0.3, 1  # red
            color: 1, 1, 1, 1 # White text

    # Supported file types info
    Label:
        text: "Supported file types: PDF, DOCX, TXT, XLSX"
        size_hint_y: None
        height: "30dp"
        color: 0.3, 0.3, 0.3, 1
        font_size: "16sp"

    # Middle section: file content view
    ScrollView:
        do_scroll_x: False

        TextInput:
            id: output
            text: ""
            readonly: True
            size_hint_y: None
            height: self.minimum_height

        Label:
            id: output
            text: "File content will appear here"
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]
            padding: "10dp", "10dp"
            valign: "top"
            halign: "left"
